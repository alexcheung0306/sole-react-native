# Production Environment (Live App)
# This is what your published app will use

# IMPORTANT: Replace with your actual production backend URL
# Example: https://api.soleapp.com or https://api.yourdomain.com
EXPO_PUBLIC_API_URL=https://api.yoursoleapp.com

EXPO_PUBLIC_APP_URL=https://yoursoleapp.com
NODE_ENV=production

# Clerk (Production Keys - GET FROM CLERK DASHBOARD)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_KEY
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET

# Analytics (Production)
EXPO_PUBLIC_POSTHOG_KEY=your_production_posthog_key
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Database (Production - Should be on cloud)
DATABASE_URL=postgresql://prod_user:secure_password@production-db.com:5432/sole_production

# MinIO Storage (Production)
MINIO_BUCKET_NAME=sole-production
MINIO_ENDPOINT=storage.yoursoleapp.com
MINIO_ACCESS_KEY=your_production_access_key
MINIO_SECRET_KEY=your_production_secret_key

# Stripe (Live mode - REAL PAYMENTS)
STRIPE_API_KEY=sk_live_YOUR_LIVE_KEY
STRIPE_PRO_MONTHLY_PLAN_ID=price_live_id
STRIPE_WEBHOOK_SECRET=whsec_live_secret

# Other Services (Production)
UPLOADTHING_SECRET=your_production_uploadthing_secret
UPLOADTHING_APP_ID=your_production_uploadthing_app_id
RESEND_API_KEY=your_production_resend_api_key
EMAIL_FROM_ADDRESS=noreply@yoursoleapp.com
CLERK_WEBHOOK_SECRET=your_production_clerk_webhook_secret
